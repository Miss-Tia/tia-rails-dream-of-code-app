<h1>Trimesters</h1>

<ul>
  <% @trimesters.each do |trimester| %>
    <li>
      <%= "#{trimester.term} #{trimester.year}" %>
      &mdash;
      App Deadline: <%= trimester.application_deadline.strftime("%B %d, %Y") %>
      &mdash;
      <%= link_to "Edit Deadline", edit_trimester_path(trimester), class: "btn btn-sm btn-outline-primary" %>
    </li>
  <% end %>
</ul>
